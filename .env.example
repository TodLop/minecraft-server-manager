# ============================================
# Minecraft Server Manager - Environment Config
# ============================================
# Copy to .env and update values for your environment.

# Security
SECRET_KEY=change-me

# Access control (comma-separated)
ADMIN_EMAILS=admin@example.com
STAFF_EMAILS=staff@example.com

# App runtime
HOST=127.0.0.1
PORT=8000
APP_VERSION=1.1.0

# Minecraft server path (absolute or project-relative)
MINECRAFT_SERVER_PATH=./data/minecraft_server_paper

# Optional features
ENABLE_WRAPPED_PAGES=false
AUDIT_ROTATE_MAX_BYTES=1048576
AUDIT_ROTATE_RETENTION=5

# Google OAuth credentials
# Place your OAuth client credentials at:
#   config_files/client_secret_web.json
